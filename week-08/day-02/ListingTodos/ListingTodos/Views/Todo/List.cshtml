@model List<ListingTodos.Models.Todo>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <h1>Todos for today</h1>
    <table border="1">
        <tr style="font-weight: bold">
            <td width="60">
                Number
            </td>
            <td width="200">
                Title
            </td>
            <td width="100">
                Is it urgent?
            </td>
            <td width="100">
                Is it done?
            </td>
        </tr>
        @{
            foreach (var todo in Model)
            {
                <tr>
                    <td>
                        @todo.Id
                    </td>
                    <td>
                        @todo.Title
                    </td>
                    <td>
                        @todo.IsUrgent
                    </td>
                    <td>
                        @todo.IsDone
                    </td>
                </tr>
            }
        }
    </table>
</body>
</html>