@model PokemonWebapp.ViewModels.HuntViewModel.HuntViewModel
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Hunt Page</title>
</head>
<body>
    <h2>Let's hunt!</h2>

    <div>
        A level @Model.Pokemon.Level @Model.Pokemon.Type appeared.
        
        <img src="~/Images/@(Model.Pokemon.Type).png" height="100" /> <br />
        
        @{
            var random = new Random();
            var pokemon = Model.User.Pokemons[random.Next(0, Model.User.Pokemons.Count)];
        }

        You are playing with a @pokemon.Level level @pokemon.Type.
        <img src="~/Images/@(pokemon.Type).png" height="100" />

        @{
            if (pokemon.Level > Model.Pokemon.Level)
            {
                int id = @Model.User.Pokemons.Max(m => m.Id) + 1;
                <form action="/user/catch" method="post">
                    <input type="hidden" name="Id" value="@id" /><br />
                    <input type="hidden" name="Type" value="@Model.Pokemon.Type" /><br />
                    <input type="hidden" name="Level" value="@Model.Pokemon.Level" /><br />
                    <input type="submit" value="I got it." />
                </form>
            }
            else
            {
                <form action="/user/remove" method="post">
                    <input type="hidden" name="Id" value="@pokemon.Id" />
                    <input type="submit" value="I got it." />
                </form>
            }
        }
    </div>
</body>
</html>